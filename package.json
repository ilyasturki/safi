{
    "name": "safi",
    "description": "A minimalist, self hosted text editor for markdown files. Safi provides a clean, mobile-friendly interface focused on your content.",
    "type": "module",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prepare": "nuxt prepare",
        "dev": "nuxt dev",
        "build": "nuxt build",
        "preview": "nuxt preview",
        "start": "bun --env-file=.env .output/server/index.mjs",
        "typecheck": "nuxt prepare && vue-tsc -b --noEmit",
        "format": "prettier --write '**/*.{js,ts,vue,css,scss,html,json,md,yml}'",
        "format:check": "prettier --check '**/*.{js,ts,vue,css,scss,html,json,md,yml}'",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "clear": "rm -rf .nuxt/ .output/ node_modules/ dist/"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.19.0",
        "@codemirror/commands": "^6.9.0",
        "@codemirror/lang-css": "^6.3.1",
        "@codemirror/lang-html": "^6.4.11",
        "@codemirror/lang-javascript": "^6.2.4",
        "@codemirror/lang-json": "^6.0.2",
        "@codemirror/lang-markdown": "^6.4.0",
        "@codemirror/lang-python": "^6.2.1",
        "@codemirror/language": "^6.11.3",
        "@codemirror/search": "^6.5.11",
        "@codemirror/state": "^6.5.2",
        "@codemirror/view": "^6.38.6",
        "@fontsource/ibm-plex-mono": "^5.2.7",
        "@lezer/highlight": "^1.2.2",
        "@lezer/markdown": "^1.5.1",
        "@nuxt/icon": "2.1.0",
        "@tailwindcss/vite": "^4.1.15",
        "@vueuse/core": "^14.0.0",
        "h3": "^1.15.4",
        "nuxt": "^4.1.3",
        "tailwindcss": "^4.1.15",
        "thememirror": "^2.0.1",
        "vue": "^3.5.22",
        "vue-router": "^4.6.3"
    },
    "devDependencies": {
        "@ilyasso/eslint-config": "^0.0.3",
        "@types/bun": "^1.3.1",
        "eslint": "^9.38.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "typescript": "^5.9.3",
        "vue-tsc": "^3.1.1"
    }
}
